# EditorConfig is awesome: https://EditorConfig.org

# 최상위 EditorConfig 파일임을 나타냄
root = true

[*] # 모든 파일에 적용
indent_style = space # 들여쓰기 스타일: space 또는 tab
indent_size = 2      # 들여쓰기 크기
end_of_line = lf     # 줄바꿈 문자 스타일
charset = utf-8      # 문자 인코딩
trim_trailing_whitespace = true # 줄 끝의 불필요한 공백 제거
insert_final_newline = true   # 파일 끝에 빈 줄 추가

[*.md] # 마크다운 파일에는 다른 규칙 적용 (예시)
trim_trailing_whitespace = false